<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.aartea.passorfail.MainActivity">

    <EditText
        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Input Grade"
        android:gravity="center"
        android:layout_below="@+id/tv"
        android:layout_toLeftOf="@+id/numToLet"
        android:layout_toStartOf="@+id/numToLet" />


    <TextView
        android:id="@+id/tv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="#8dcfca"
        android:textColor="#000"
        android:textStyle="italic"
        android:padding="10dp"
        android:hint="Pass, or Fail?"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/numToLet"
        android:layout_alignEnd="@+id/numToLet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/numToLet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letter Grade"
        android:layout_alignTop="@+id/fiveTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/passFail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass Or Fail"
        android:layout_below="@+id/et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/fiveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="five times"
        android:layout_below="@+id/et"
        android:layout_toLeftOf="@+id/numToLet"
        android:layout_toRightOf="@+id/passFail"
        android:layout_toEndOf="@+id/passFail" />

</RelativeLayout>
